@model Ingredient

@{
    ViewBag.Title = $"Edit {Model.Name} Ingredient";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2">
                <i class="bi bi-pencil-square me-2"></i>Edit Ingredient
            </h1>
            <p class="mb-0 opacity-75">Update details for "<strong>@Model.Name</strong>"</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<!-- Edit Form Card -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-egg-fried me-2"></i>Ingredient Details
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <!-- Hidden ID Field -->
                    <input type="hidden" asp-for="IngredientId" />

                    <!-- Current Name Display -->
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Current Name:</strong> @Model.Name
                    </div>

                    <!-- Ingredient Name -->
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-tag me-1"></i>Ingredient Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter new ingredient name..." />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Divider -->
                    <hr class="my-4">

                    <!-- Buttons -->
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-warning flex-grow-1">
                            <i class="bi bi-check-circle me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="card mt-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>Quick Actions
                </h6>
                <div class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@Model.IngredientId" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-eye me-1"></i>View Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.IngredientId" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </a>
                    <a asp-action="Create" class="btn btn-sm btn-outline-success">
                        <i class="bi bi-plus-circle me-1"></i>Create New
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}