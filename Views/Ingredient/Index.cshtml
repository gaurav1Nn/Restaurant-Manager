@model IEnumerable<Ingredient>

@{
    ViewBag.Title = "List of Restaurant Ingredients";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2">
                <i class="bi bi-egg-fried me-2"></i>Ingredients
            </h1>
            <p class="mb-0 opacity-75">Manage your restaurant's ingredient inventory</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Add New Ingredient
        </a>
    </div>
</div>

<!-- Ingredients Table -->
@if (Model.Any())
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list-ul me-2"></i>All Ingredients</span>
            <span class="badge bg-light text-dark">
                <i class="bi bi-hash me-1"></i>@Model.Count() items
            </span>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 60%;">
                            <i class="bi bi-tag me-2"></i>@Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="text-end">
                            <i class="bi bi-gear me-2"></i>Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Ingredient i in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle bg-light me-3">
                                        <i class="bi bi-egg text-primary"></i>
                                    </div>
                                    <span class="fw-medium">@Html.DisplayFor(modelItem => i.Name)</span>
                                </div>
                            </td>
                            <td class="text-end align-middle">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@i.IngredientId"
                                       class="btn btn-sm btn-info" title="View Details">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@i.IngredientId"
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@i.IngredientId"
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <!-- Empty State -->
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox display-1 text-muted mb-3"></i>
            <h4 class="text-muted">No Ingredients Found</h4>
            <p class="text-muted mb-4">Start by adding your first ingredient to the inventory.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add First Ingredient
            </a>
        </div>
    </div>
}

<!-- Add this CSS for icon circle -->
<style>
    .icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>