@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="page-header text-center mb-5">
    <h1 class="display-4 fw-bold mb-3">
        <i class="bi bi-shop me-2"></i>Welcome to Tequilas Restaurant
    </h1>
    <p class="lead mb-0">Manage your restaurant efficiently - Ingredients, Menu & Orders all in one place</p>
</div>

<!-- Feature Cards -->
<div class="row g-4 mb-5">
    <!-- Ingredients Card -->
    <div class="col-md-4">
        <div class="card h-100 text-center">
            <div class="card-body p-4">
                <div class="mb-4">
                    <i class="bi bi-egg-fried display-1 text-gradient"></i>
                </div>
                <h4 class="card-title mb-3">Ingredients</h4>
                <p class="text-muted mb-4">
                    Manage your inventory of ingredients. Add, edit, or remove items from your stock.
                </p>
                <a asp-controller="Ingredient" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right-circle me-2"></i>View Ingredients
                </a>
            </div>
        </div>
    </div>

    <!-- Menu Items Card -->
    <div class="col-md-4">
        <div class="card h-100 text-center">
            <div class="card-body p-4">
                <div class="mb-4">
                    <i class="bi bi-menu-button-wide display-1 text-gradient"></i>
                </div>
                <h4 class="card-title mb-3">Menu Items</h4>
                <p class="text-muted mb-4">
                    Create and manage your restaurant menu. Set prices and descriptions for dishes.
                </p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-arrow-right-circle me-2"></i>View Menu
                </a>
            </div>
        </div>
    </div>

    <!-- Orders Card -->
    <div class="col-md-4">
        <div class="card h-100 text-center">
            <div class="card-body p-4">
                <div class="mb-4">
                    <i class="bi bi-cart3 display-1 text-gradient"></i>
                </div>
                <h4 class="card-title mb-3">Orders</h4>
                <p class="text-muted mb-4">
                    Track and manage customer orders. View order history and status updates.
                </p>
                <a asp-controller="Order" asp-action="ViewOrders" class="btn btn-info">
                    <i class="bi bi-arrow-right-circle me-2"></i>View Orders
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="card mb-5">
    <div class="card-header">
        <i class="bi bi-lightning-charge me-2"></i>Quick Actions
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Ingredient" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                    <i class="bi bi-plus-circle d-block mb-2 fs-4"></i>
                    Add Ingredient
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Product" asp-action="AddEdit" class="btn btn-outline-success w-100 py-3">
                    <i class="bi bi-plus-circle d-block mb-2 fs-4"></i>
                    Add Menu Item
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Order" asp-action="Create" class="btn btn-outline-info w-100 py-3">
                    <i class="bi bi-cart-plus d-block mb-2 fs-4"></i>
                    New Order
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Order" asp-action="Cart" class="btn btn-outline-warning w-100 py-3">
                    <i class="bi bi-basket d-block mb-2 fs-4"></i>
                    View Cart
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Info Section -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle me-2 text-primary"></i>About This System
                </h5>
                <p class="text-muted mb-0">
                    Tequilas Restaurant Manager helps you streamline your restaurant operations.
                    Manage your ingredients inventory, create menu items, and process customer orders
                    all from one centralized dashboard.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-telephone me-2 text-success"></i>Need Help?
                </h5>
                <p class="text-muted mb-2">
                    <i class="bi bi-envelope me-2"></i>support@tequilasrestaurant.com
                </p>
                <p class="text-muted mb-0">
                    <i class="bi bi-clock me-2"></i>Available 24/7 for assistance
                </p>
            </div>
        </div>
    </div>
</div>