@model IEnumerable<restaurant_prf.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2">
                <i class="bi bi-receipt me-2"></i>My Orders
            </h1>
            <p class="mb-0 opacity-75">View your order history</p>
        </div>
        <a asp-action="Create" asp-controller="Order" class="btn btn-success">
            <i class="bi bi-cart-plus me-2"></i>New Order
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header">
            <i class="bi bi-list-ul me-2"></i>Order History
            <span class="badge bg-light text-dark float-end">@Model.Count() orders</span>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-hash me-1"></i>Order ID</th>
                        <th><i class="bi bi-calendar me-1"></i>Order Date</th>
                        <th><i class="bi bi-currency-dollar me-1"></i>Total Amount</th>
                        <th><i class="bi bi-box me-1"></i>Order Items</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
                    {
                        <tr>
                            <td class="align-middle">
                                <span class="badge bg-primary">#@order.OrderId</span>
                            </td>
                            <td class="align-middle">
                                @order.OrderDate.ToString("MMM dd, yyyy")
                            </td>
                            <td class="align-middle">
                                <span class="fw-bold text-success">@order.TotalAmount.ToString("C")</span>
                            </td>
                            <td>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <li class="mb-1">
                                            <i class="bi bi-dot text-primary"></i>
                                            <strong>@item.Product.Name</strong> -
                                            <span class="badge bg-secondary">x@item.Quantity</span>
                                            <span class="text-muted">@item.Price.ToString("C")</span>
                                        </li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-cart-x display-4 text-muted mb-3"></i>
            <h5 class="text-muted">No Orders Yet</h5>
            <a asp-action="Create" asp-controller="Order" class="btn btn-primary mt-3">
                <i class="bi bi-cart-plus me-2"></i>Place Your First Order
            </a>
        </div>
    </div>
}