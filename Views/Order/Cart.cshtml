@model OrderViewModel

@{
    ViewBag.Title = "My Cart";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2">
                <i class="bi bi-cart3 me-2"></i>My Cart
            </h1>
            <p class="mb-0 opacity-75">Review your items before placing the order</p>
        </div>
        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-light">
            <i class="bi bi-arrow-left me-2"></i>Continue Shopping
        </a>
    </div>
</div>

@if (Model.OrderItems != null && Model.OrderItems.Count > 0)
{
    <div class="row g-4">
        <!-- Cart Items Column -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>
                        <i class="bi bi-bag me-2"></i>Order Items
                    </span>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-hash me-1"></i>@Model.OrderItems.Count items
                    </span>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 40%;">
                                    <i class="bi bi-box me-2"></i>Product
                                </th>
                                <th class="text-center" style="width: 15%;">
                                    <i class="bi bi-stack me-2"></i>Qty
                                </th>
                                <th class="text-end" style="width: 20%;">
                                    <i class="bi bi-tag me-2"></i>Price
                                </th>
                                <th class="text-end" style="width: 25%;">
                                    <i class="bi bi-calculator me-2"></i>Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.OrderItems.Count; i++)
                            {
                                var item = Model.OrderItems[i];
                                decimal itemTotal = item.Quantity * item.Price;

                                <tr>
                                    <td class="align-middle">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-light me-3">
                                                <i class="bi bi-box-seam text-primary"></i>
                                            </div>
                                            <span class="fw-medium">@item.ProductName</span>
                                        </div>
                                    </td>
                                    <td class="text-center align-middle">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">
                                            @item.Quantity
                                        </span>
                                    </td>
                                    <td class="text-end align-middle">
                                        <span class="text-muted">@item.Price.ToString("C")</span>
                                    </td>
                                    <td class="text-end align-middle">
                                        <span class="fw-bold text-success">@itemTotal.ToString("C")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Continue Shopping Card -->
            <div class="card mt-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">
                                <i class="bi bi-bag-plus text-primary me-2"></i>Want to add more items?
                            </h6>
                            <p class="text-muted small mb-0">Browse our menu for more delicious options</p>
                        </div>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-right me-2"></i>Browse Menu
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary Column -->
        <div class="col-lg-4">
            <div class="card sticky-summary">
                <div class="card-header">
                    <i class="bi bi-receipt me-2"></i>Order Summary
                </div>
                <div class="card-body p-4">
                    <!-- Summary Details -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span>@Model.TotalAmount.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Tax</span>
                            <span>$0.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Delivery</span>
                            <span class="text-success">Free</span>
                        </div>
                    </div>

                    <hr>

                    <!-- Total -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="h5 mb-0 fw-bold">Total</span>
                        <span class="h4 mb-0 fw-bold text-success">@Model.TotalAmount.ToString("C")</span>
                    </div>

                    <!-- Place Order Button -->
                    <form asp-action="PlaceOrder" method="post">
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Place Order
                            </button>
                            <a asp-action="Create" asp-controller="Order" class="btn btn-outline-secondary">
                                <i class="bi bi-pencil me-2"></i>Modify Order
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Secure Checkout Card -->
            <div class="card mt-4">
                <div class="card-body">
                    <div class="d-flex align-items-center text-muted">
                        <i class="bi bi-shield-check text-success me-3 fs-4"></i>
                        <div>
                            <small class="fw-medium">Secure Checkout</small>
                            <br>
                            <small>Your order information is protected</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card mt-4">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-question-circle text-info me-2"></i>Need Help?
                    </h6>
                    <p class="text-muted small mb-2">
                        <i class="bi bi-telephone me-2"></i>Call us: (555) 123-4567
                    </p>
                    <p class="text-muted small mb-0">
                        <i class="bi bi-clock me-2"></i>Available: 9 AM - 10 PM
                    </p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Empty Cart State -->
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted mb-3"></i>
            <h4 class="text-muted">Your Cart is Empty</h4>
            <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
            <a asp-action="Index" asp-controller="Product" class="btn btn-primary btn-lg">
                <i class="bi bi-menu-button-wide me-2"></i>Browse Menu
            </a>
        </div>
    </div>

    <!-- Suggestions -->
    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body p-4">
                    <i class="bi bi-star display-4 text-warning mb-3"></i>
                    <h5>Popular Items</h5>
                    <p class="text-muted small">Check out our best-selling dishes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body p-4">
                    <i class="bi bi-percent display-4 text-danger mb-3"></i>
                    <h5>Special Offers</h5>
                    <p class="text-muted small">Don't miss our daily deals</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body p-4">
                    <i class="bi bi-clock-history display-4 text-info mb-3"></i>
                    <h5>Quick Order</h5>
                    <p class="text-muted small">Reorder from your history</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Custom Styles -->
<style>
    .icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sticky-summary {
        position: sticky;
        top: 20px;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

        .table tbody tr:hover {
            background-color: #f8f9ff;
        }
</style>